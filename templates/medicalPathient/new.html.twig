{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block bodyClass %}layout-h{% endblock %}

{% block body %}
  {{ include('site/blocks/_header.html.twig') }}

  <section class="section-container">
    <div class="content-wrapper">
      <div class="unwrap my-3">

        <div class="card">
          <div class="card-header">
            <h3 class="text-muted mt-0">Ingrese los datos para el nuevo Paciente</h3>
          </div>

          <div class="card-wrapper">
            <div class="card-body">
              <div class="row justify-content-md-center">
                <div class="col-sm-8 col-lg-6">
                  {% if error %}
                    <div class="alert alert-danger" role="alert">
                      {{ error }}
                    </div>
                  {% endif %}

                  {{ form(form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block js %}
  <script>
    $(document).ready(function() {
      $('#new_medical_pathient_birthday').datepicker({format: "dd/mm/yyyy"});
    });
  </script>
{% endblock %}