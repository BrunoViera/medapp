<div class="card card-default">
  <div class="card-body">
    {# <a class="btn btn-outline-secondary" onclick="window.print();">
      Imprimir listado  <span class="fa fa-print"></span>
    </a> #}
    <div class="table-responsive">
      <table class="table table-striped table-hover w-100 dataTable no-footer dtr-inline" role="grid">
        <thead>
          <tr role="row">
            <th rowspan="1" colspan="1" style="min-width: 215px">
              <strong>Medicamento</strong>
            </th>
            <th rowspan="1" colspan="1" style="min-width: 50px">
              <strong>Clase</strong>
            </th>
            <th rowspan="1" colspan="1">
              <strong>Dosis</strong>
            </th>
            <th rowspan="1" colspan="1">
              <strong>Frecuencia</strong>
            </th>
            <th rowspan="1" colspan="1">
          </tr>
        </thead>
        <tbody>
          {% for row in paciente.prescriptions|sort|reverse if row.active == status %}
            <tr role="row" class="odd">
              <td>{{ row.medicine }}</td>
              {# <td><a href="#" class="link-unstyled">{{ row.class|class_name }}</a></td> #}
              <td>{{ row.class|class_name }}</td>
              <td>{{ row.dose }}</td>
              <td>{{ row.frequency }}</td>
              <td>
                {# <a class="btn" style="padding: 0 10px 0 0; font-size: 1.2rem;">
                  <span class="fa fa-notes-medical"></span>
                </a> #}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>